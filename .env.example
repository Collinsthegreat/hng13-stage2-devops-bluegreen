# --- .env.example ---

# Images provided by the grader
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Active pool (blue|green)
ACTIVE_POOL=blue

# Release identifiers
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0

# Internal app port
PORT=3000

# Timeouts
PROXY_TIMEOUT=2
REQUEST_TIMEOUT=2


# Slack Webhook (for watcher)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXX/XXXXX/XXXXXXXXXXXX

# Log watcher config
NGINX_LOG_PATH=/var/log/nginx/access.log
WINDOW_SIZE=200
ERROR_RATE_THRESHOLD=2
ALERT_COOLDOWN_SEC=300
MAINTENANCE_MODE=false
